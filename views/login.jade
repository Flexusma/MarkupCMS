extends layout

block content
    include utils/hero
    .wrapper.fadeInDown
        #formContent
                // Tabs Titles
                // Icon
            .fadeIn.first
                img#icon(src='http://danielzawadzki.com/codepen/01/icon.svg' alt='User Icon')
                // Login Form
            form(action="../api/session" method="POST")
                input#login.fadeIn.second(type='text' name='x_user' placeholder='login')
                input#password.fadeIn.third(type='text' name='x_pass' placeholder='password')
                input.fadeIn.fourth(type='submit' value='Log In')
                // Remind Passowrd
            //#formFooter
                a.underlineHover(href='#') Forgot Password?

